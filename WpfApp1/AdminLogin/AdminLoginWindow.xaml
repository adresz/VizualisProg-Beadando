<Window x:Class="WpfApp1.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Bejelentkezés" Height="400" Width="700"
        Background="AliceBlue">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Felhasználónév:"/>
            <TextBox x:Name="Username" Width="200"/>

            <TextBlock Text="Jelszó:"/>
            <PasswordBox x:Name="Password" Width="200"/>

            <Button Content="Login" Width="200" Margin="10" Click="AdminLogin"></Button>
        </StackPanel>
    </Grid>
</Window>