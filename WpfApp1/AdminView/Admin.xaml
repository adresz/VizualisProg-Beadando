<Window x:Class="WpfApp1.AdminView.AdminV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.AdminView"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True" Background="LightGray" Height="50" Margin="0,0,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,0,0">
                <Button Content="Felhasználók" Padding="30,5" Margin="5" Click="UserGrid_Click"/>
                <Button Content="Események" Padding="30,5" Margin="5" Click="LogView_Click"/>
                <Button Content="" Padding="30,5" Margin="5"/>
            </StackPanel>

            
            <Button Content="Kijelentkezés" Padding="10,5" Margin="0,0,10,0"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Click="LogOut_Click"/>
        </DockPanel>

        
    </Grid>
</Window>
