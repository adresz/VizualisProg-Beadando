<Window x:Class="LoginOptions.MainWindow"
        Background="Azure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="400" Width="700">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="    Felhasználónév"/>
            <TextBox x:Name="Username" Width="190"/>

            <TextBlock Text="    Jelszó:"/>
            <PasswordBox x:Name="Password" Width="190"/>

            <!-- Gombok egy vízszintes StackPanelben -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Regisztráció" Width="90" Margin="5" Click="Register_Click"/>
                <Button Content="Bejelentkezés" Width="90" Margin="5" Click="Login_Click"/>
            </StackPanel>

            <CheckBox Content="Emlékezz rám" HorizontalAlignment="Left" Margin="15,0,0,0" x:Name="RememberMe"/>

        </StackPanel>
    </Grid>

</Window>
