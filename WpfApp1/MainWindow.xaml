<Window x:Class="LoginOptions.MainWindow"
        Background="Azure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="400" Width="700">

    <Viewbox>
        <Grid Width="250" Height="300" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Felirat félkövérre, középre rakása -->
            <TextBlock Text="Válasszon bejelentkezési módot"
                       FontSize="10"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" Margin="0,118,0,0" />

            <!-- Gombok felhelyezése eligazitása-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,136,0,23" Width="150">
                <Button Content="Felhasználó" Width="70" Height="25"/>
                <Button Content="Admin" Width="70" Height="25" Margin="10,0,0,0" Click="Button_Click"/>

            </StackPanel>
        </Grid>


    </Viewbox>
</Window>
